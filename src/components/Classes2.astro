<!-- JavaScript para manejar el botón "Leer más" -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleButtons = document.querySelectorAll('.toggle-button');
        
        toggleButtons.forEach(button => {
            button.addEventListener('click', function() {
                const contentPreview = this.previousElementSibling.previousElementSibling;
                const contentFull = this.previousElementSibling;
                
                // Alternar la visibilidad del contenido completo
                contentFull.classList.toggle('hidden');
                
                // Cambiar el texto del botón
                if (contentFull.classList.contains('hidden')) {
                    this.textContent = 'Leer más';
                } else {
                    this.textContent = 'Leer menos';
                }
            });
        });
    });
</script>

