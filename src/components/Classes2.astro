<section id="clases">
    <h1 class="text-white p-4 pt-24 text-center text-4xl font-bold">CLASES</h1>
    <section class="flex flex-wrap gap-4 justify-center">
        <a href="#wod">
            <img src="crossfit.jpg" alt="WOD" class="w-36 h-36 object-cover rounded hover-effect">
        </a>
        <a href="#sweat">
            <img src="sweat2.jpg" alt="Sweat" class="w-36 h-36 object-cover rounded hover-effect">
        </a>
        <a href="#openbox">
            <img src="openbox.jpg" alt="Open box" class="w-36 h-36 object-cover rounded hover-effect">
        </a>
        <a href="#machines">
            <img src="gym.jpg" alt="Machines" class="w-36 h-36 object-cover rounded hover-effect">
        </a>
